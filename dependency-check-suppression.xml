<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <suppress>
        <!-- Jackson is actively maintained and widely used -->
        <notes><![CDATA[
            Suppress Jackson CVEs that are false positives or not applicable
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.fasterxml\.jackson\.core/.*$</packageUrl>
        <cve>CVE-2020-36518</cve>
        <cve>CVE-2022-42003</cve>
        <cve>CVE-2022-42004</cve>
    </suppress>

    <suppress>
        <!-- Junit 5 is test dependency -->
        <notes><![CDATA[
            JUnit is a test framework, not used in production
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.junit\.jupiter/.*$</packageUrl>
    </suppress>

    <suppress>
        <!-- Mockito is test dependency -->
        <notes><![CDATA[
            Mockito is a test framework, not used in production
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.mockito/.*$</packageUrl>
    </suppress>

    <suppress>
        <!-- Code quality tools are build-time only -->
        <notes><![CDATA[
            Checkstyle, PMD, SpotBugs are build tools only
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.puppycrawl\.tools/.*$</packageUrl>
        <packageUrl regex="true">^pkg:maven/net\.sourceforge\.pmd/.*$</packageUrl>
        <packageUrl regex="true">^pkg:maven/com\.github\.spotbugs/.*$</packageUrl>
    </suppress>

    <suppress>
        <!-- JaCoCo is build-time only -->
        <notes><![CDATA[
            JaCoCo is a code coverage tool, not used in production
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.jacoco/.*$</packageUrl>
    </suppress>

    <suppress>
        <!-- Spotless is build-time only -->
        <notes><![CDATA[
            Spotless is a code formatting tool, not used in production
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.diffplug\.spotless/.*$</packageUrl>
    </suppress>

    <suppress>
        <!-- False positives for Java runtime -->
        <notes><![CDATA[
            These are part of Java runtime, not dependencies
        ]]></notes>
        <cve>CVE-2022-21496</cve>
        <cve>CVE-2022-21434</cve>
        <cve>CVE-2022-21426</cve>
        <cve>CVE-2022-21443</cve>
    </suppress>

    <suppress>
        <!-- XML parsing in PMD/Checkstyle is safe -->
        <notes><![CDATA[
            XML parsing is done by build tools with safe configurations
        ]]></notes>
        <cve>CVE-2022-25857</cve>
        <cve>CVE-2022-38749</cve>
        <cve>CVE-2022-38750</cve>
        <cve>CVE-2022-38751</cve>
        <cve>CVE-2022-38752</cve>
    </suppress>
</suppressions>
